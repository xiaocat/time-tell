extends ../layout

block content
  body.blogAdd
    include ../admin/nav
    .blogAdd__container.ui.segment.container
      form.ui.form(method="post")
        h3.ui.dividing.header 创建博客
        .field
          label 标题
          .filed
            input(type="text", name="title", placeholder="请输入标题")
        .field
          label 标签
          .filed
            input(type="text", name="tags", placeholder="请输入标签")
        .field
          label 内容
          textarea(name="contents", placeholder="")
        button.ui.button.teal.js_blog_submit(type="submit") 创建
